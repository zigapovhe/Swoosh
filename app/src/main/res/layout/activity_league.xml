<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="728dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop" android:contentDescription="@string/description"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="29dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter" android:contentDescription="@string/description"/>

    <TextView
            android:text="Desired League:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:textSize="18sp" android:fontFamily="@font/montserrat" android:textAlignment="center"
            android:textColor="@android:color/white" android:contentDescription="@string/description"/>
    <Button
            android:text=" NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@drawable/swoosh_button"
            android:contentDescription="@string/description"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="388dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <ToggleButton
                android:text="Mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mensBtn" android:textOff="Mens"
                android:textOn="Mens" android:textColor="@android:color/white"
                android:background="@drawable/swoosh_toggle" android:contentDescription="@string/description"/>
        <ToggleButton
                android:text="Womens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/womensBtn" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" android:textOff="Womens" android:textOn="Womens"
                android:textColor="@android:color/white" android:background="@drawable/swoosh_toggle"
                android:contentDescription="@string/description"/>
        <ToggleButton
                android:text="Co-ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/coedBtn" android:textOff="Co-ed"
                android:textOn="Co-ed" android:textColor="@android:color/white"
                android:background="@drawable/swoosh_toggle" android:contentDescription="@string/description"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>